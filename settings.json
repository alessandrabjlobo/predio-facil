{
  // Deno só dentro de supabase/functions
  "deno.enable": true,
  "deno.enablePaths": ["supabase/functions"],
  "deno.config": "supabase/functions/deno.json",
  "deno.lint": true,
  "deno.unstable": true,
  "deno.suggest.imports.hosts": {
    "https://deno.land": true,
    "https://esm.sh": true
  },

  // Garanta que o restante do projeto use o TypeScript do Node/Vite
  "typescript.tsdk": "node_modules/typescript/lib"

  // ⚠️ Remova o formatador Deno global para não formatar seus arquivos React/Vite
  // (se quiser Prettier aqui, deixe o VS Code escolher ou configure o Prettier)
  // "[typescript]": { "editor.defaultFormatter": "denoland.vscode-deno" }
}

